<h2>Build Your Dream Team:</h2>
<div class="sixteen columns" id="grid-filters">
	<div class="one-third column alpha">
		<h4>Filter by Type:</h4>
		<div id="filter-type">
			<% UserType.all.each do |i| %>
				<% unless i.name == "Advisor" %>
					<input type="checkbox" class="filter-type-input" id="<%=i.name.downcase%>" /><label for="<%=i.name.downcase%>"><%=i.name%></label>
				<%end%>
			<%end%>
		</div>

	</div>
	<div class="two-thirds column omega">
		<h4>Filter by Program:</h4>
		<div id="filter-program">
			<% Program.all.each do |i| %>
				<input type="checkbox" class="filter-type-input" id="program-<%=i%>" /><label for="program-<%=i%>"><%=i.name.to_s%></label>
			<%end%>
		</div>
	</div>
	<div class="one-third column alpha second-filter-row">
		<h4>Search by Name:</h4>
		<input type="text" name="filter-first-name" id="filter-first-name" title="First Name...">
		<input type="text" name="filter-last-name" id="filter-last-name" title="Last Name...">
	</div>
	<div class="one-third column second-filter-row">
		<h4>Filter by Major &amp; Minor:</h3>
		<input type="hidden" id="filter-major">
		<input type="hidden" id="filter-minor">
	</div>
	<div class="one-third column omega second-filter-row">
		<h4>Search by Skills &amp; Interests:</h4>
		<input type="text" name="filter-skills" id="filter-skills" title="Skills...">
		<input type="text" name="filter-interests" id="filter-interests" title="Interests...">
	</div>
</div>
<div class="thirteen columns alpha user-grid">
	<% UserType.all.each do |i| %>
		<% unless i.name == "Advisor" %>
			<h3 class='<%= i.name.downcase%>'><%= i.getQuirkyName %></h3>
			
			<div class="clearfix <%= i.name.downcase%> user-box-wrap">
				<% get_user_type(i.id).shuffle.each_with_index do |e, i| %>
					<div class='user-grid-box <% if i % 3 == 0 %>first-col<% end %> <% if i % 3 == 2 %>last-col<% end %>'>
						<%= gravatar_for(e, 220) %>
						<div class='overlay'>
							<div class='full-name'>
								<%= e.full_name %>
							</div>
							<div class='buttons'>
								<a href='#more-<%= e.id %>' class='function-button-chill' rel='facebox'><i class='icon-info-sign'></i> More Info</a>
								<a href='#' class='action-button-chill'><i class='icon-plus-sign'></i> Add to Startup</a>
							</div>
							<div id='more-<%=e.id %>' class='more-info'>
								<div class='box-name clearfix'>
									<%= link_to user_path(e) do %>
										<%=e.full_name%> <i class='icon-circle-arrow-right'></i>
									<% end %>
								</div>
								<% if(e.majors.length > 0) %>
									<div class='box-majors clearfix'>
										<ul>
											<% e.majors.each do |m| %>
												<li><%= m.name %></li>
											<% end %>
										</ul>
									</div>
								<% end %>
								
								<% if(e.minors.length > 0) %>
									<div class='box-minors'>
										<ul>
											<% e.minors.each do |m| %>
												<li><%= m.name %></li>
											<% end %>
										</ul>
									</div>
								<% end %>
								
								<% if(e.programs.length > 0) %>
									<div class='box-programs'>
											<ul>
												<% e.programs.each do |m| %>
													<li><%= m.name %></li>
												<% end %>
											</ul>
									</div>
								<% end %>
								
						<% if(e.skills.length > 0) %>
							<div class='user-skills'>	
								<h4>Skills:</h4>
								<span class='one-tool'>
									<% if(e.skills.length > 1) %>
										<%= e.skills.join(', ') %>
									<% else %>
										<%= e.skills[0] %>
									<% end %>
								</span>
							</div>
						<% end %>

						<% if(e.interests.length > 0) %>
							<div class='user-interests'>
								<h4>Interests:</h4>
								<span class='two-tool'>
									<% if(e.interests.length > 1) %>
										<%= e.interests.join(', ') %>
									<% else %>
										<%= e.interests[0] %>
									<% end %>
								</span>
							</div>
						<% end %>
								
							</div>
						</div>
					</div>

				<% end %>
			</div>
		<%end%>
	<%end%>
	
</div>
