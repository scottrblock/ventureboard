<h1>Editing <%= @user.possessive_name %> Profile:</h1>



<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <%= f.fields_for :majors do |builder| %>
	<%= render 'major_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Major", f, :majors %>
 
 <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Update Profile" , :class => 'green-button' %>
  </div>
<% end %>

<%= link_to 'Back to Profile', @user %>